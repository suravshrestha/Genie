{
  "name": "genie",
  "displayName": "Genie",
  "description": "Your companion for boosting your coding productivity.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "genie.document",
        "title": "Document",
        "category": "Genie"
      },
      {
        "command": "genie.explain",
        "title": "Explain",
        "category": "Genie"
      },
      {
        "command": "genie.optimize",
        "title": "Optimize",
        "category": "Genie"
      },
      {
        "command": "genie.unitTest",
        "title": "Unit Test",
        "category": "Genie"
      },
      {
        "command": "genie.copyToClipboard",
        "title": "Copy to Clipboard",
        "category": "Genie",
        "icon": "$(notebook)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "genie.copyToClipboard",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Genie",
      "properties": {
        "genie.apiKey": {
          "type": "string",
          "markdownDescription": "Your OpenAI API Key. If you haven't configured this setting yet, you can obtain your API key through the [Open AI Platform](https://platform.openai.com/api-keys).",
          "order": 0
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "prettier": "3.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "openai": "^4.24.1"
  }
}
